{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://control-panel.local/schemas/keystone/PolicyDecisionRecord.schema.json",
  "title": "PolicyDecisionRecord Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "spec_version",
    "canon_version",
    "record_type",
    "ts_ms",
    "trace",
    "producer",
    "auth_context_envelope_sha256",
    "policy",
    "request",
    "decision"
  ],
  "properties": {
    "spec_version": { "$ref": "Shared.schema.json#/$defs/SpecVersion" },
    "canon_version": { "$ref": "Shared.schema.json#/$defs/CanonVersion" },
    "record_type": { "const": "policy_decision" },
    "ts_ms": { "$ref": "Shared.schema.json#/$defs/IntMillis" },
    "trace": { "$ref": "TraceContext.schema.json" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["layer", "component"],
      "properties": {
        "layer": { "const": "cpo" },
        "component": { "$ref": "Shared.schema.json#/$defs/Token" }
      }
    },
    "auth_context_envelope_sha256": { "$ref": "Shared.schema.json#/$defs/Hash256" },
    "policy": { "$ref": "Shared.schema.json#/$defs/PolicyRef" },
    "request": { "$ref": "Shared.schema.json#/$defs/PolicyRequest" },
    "decision": { "$ref": "Shared.schema.json#/$defs/Decision" }
  }
}
